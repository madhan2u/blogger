<%= form_for (@article) do |f| %>
	<ul>
		<% @article.errors.full_messages.each do |error| %>
			<li>
				<%= error %>
			</li>
		<% end%>
	</ul>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :tag_list %>
		<%= f.text_field :tag_list %>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<p class="article_actions">
	<%= link_to "Cancel", articles_path, class: "top-button" %>
</p>