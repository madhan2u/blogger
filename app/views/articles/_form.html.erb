<%= form_for(@article, html: {multipart: true}) do |f| %>
	<ul>
		<% @article.errors.full_messages.each do |error| %>
			<li>
				<%= error %>
			</li>
		<% end%>
	</ul>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :tag_list %>
		<%= f.text_field :tag_list %>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</p>
	<p>
		<% if @article.image.exists? %>
			<%= image_tag @article.image.url(:thumb) %>
		<% end %>
		<%= f.label :image, "Attach a New Image" %><br/>
		<%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<p class="article_actions">
	<%= link_to "Cancel", articles_path, class: "top-button" %>
</p>